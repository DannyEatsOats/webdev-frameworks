rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Publicly accessible products collection
    match /products/{productId} {
      allow read: if true; // Anyone can read products
      allow write: if request.auth != null; // Only authenticated users can add/edit products
    }

    // Logged-in users can access the builds collection
    match /builds/{buildId} {
      allow read, write: if request.auth != null; // Only authenticated users can read and write builds
    }
  }
}